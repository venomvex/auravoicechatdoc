# Aura Voice Chat Backend - Environment Configuration
# Developer: Hawkaye Visions LTD â€” Pakistan

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Cognito
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
COGNITO_IDENTITY_POOL_ID=

# Database - RDS PostgreSQL
DB_HOST=
DB_PORT=5432
DB_NAME=auravoicechat
DB_USER=aura_admin
DB_PASSWORD=
DATABASE_URL=postgresql://aura_admin:password@localhost:5432/auravoicechat

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20

# AWS S3
S3_BUCKET_NAME=aura-voice-chat-files
S3_BUCKET_REGION=us-east-1

# AWS SNS
SNS_TOPIC_ARN=
SNS_PLATFORM_APPLICATION_ARN=

# Redis
REDIS_URL=redis://localhost:6379

# JWT (for local development without Cognito)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Twilio (for OTP fallback)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=*
