<network-security-config>
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartext for local development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
    
    <!-- 
      Allow cleartext for EC2 backend (temporary, for development only)
      TODO: For production, set up HTTPS with a proper domain name and certificate.
    -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">43.204.130.237</domain>
    </domain-config>
</network-security-config>
